<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="10pt"/>

    <!-- Phần hiển thị thời gian và điểm số -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Điểm: "
            android:textSize="10pt"/>

        <TextView
            android:id="@+id/textView_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="100"
            android:textSize="10pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Thời gian: "
            android:textSize="10pt" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="20s"
            android:textSize="10pt" />
    </LinearLayout>

    <!-- Phần hiển thị câu hỏi và phương án trả lời -->
    <LinearLayout
        android:id="@+id/layout_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Câu "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_sentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Gà và trứng, cái nào có trước?"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/btnOp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gà" />

            <Button
                android:id="@+id/btnOp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trứng" />

            <Button
                android:id="@+id/btnOp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cả hai cái đều có trước" />

            <Button
                android:id="@+id/btnOp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cả hai cái đều không có trước" />
        </LinearLayout>
    </LinearLayout>

